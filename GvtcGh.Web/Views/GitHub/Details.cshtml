            <dd>
                @Html.DisplayFor(model => model.UserDetails.Following)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UserDetails.Hireable):&nbsp;
            </dt>

            <dd>
                @if (Model.UserDetails.Hireable == null)
                {
                    @Html.Label(string.Empty)
                }
                else
                {
                    @Html.LabelFor(model => model.UserDetails.Hireable.ToString())
                }

            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UserDetails.HtmlUrl):&nbsp;
