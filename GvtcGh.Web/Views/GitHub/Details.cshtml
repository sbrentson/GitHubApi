@model GvtcGh.Web.Models.GitHubUser

@{
    ViewBag.Title = "Details";
}
<h2>Details for Git Hub User: @Model.Login</h2>
<p>
    @Html.ActionLink("Back", "Index")
</p>
<hr />
@if (!String.IsNullOrEmpty(Model.Error))
{
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Error):&nbsp;
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Error)
        </dd>
    </dl>
}
else
{
    <div>
        <img src="@Model.UserDetails.AvatarUrl" width="115" height="115" />
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.UserDetails.AvatarUrl):&nbsp;
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserDetails.AvatarUrl)
            </dd>

